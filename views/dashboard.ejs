<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Dashboard | HomeConnect</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="css/style.css">

    <style>
        .dashboard {
            max-width: 1200px;
            margin: 30px auto;
            padding: 0 20px;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            flex-wrap: wrap;
            gap: 20px;
        }

        .dashboard-title {
            font-size: 28px;
            font-weight: 600;
            color: #333;
        }

        .dashboard-actions {
            display: flex;
            gap: 12px;
        }

        .dashboard-btn {
            background-color: #2c6bed;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .dashboard-btn:hover {
            background-color: #1a5ad7;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(44, 107, 237, 0.2);
        }

        .dashboard-btn.outline {
            background-color: transparent;
            border: 1.5px solid #2c6bed;
            color: #2c6bed;
        }

        .dashboard-btn.outline:hover {
            background-color: #f0f5ff;
        }

        .dashboard-stats {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card h3 {
            color: #666;
            font-size: 15px;
            font-weight: 500;
            margin-bottom: 12px;
        }

        .stat-card .value {
            font-size: 28px;
            font-weight: 600;
            color: #2c6bed;
        }

        .stat-card .trend {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-top: 10px;
            font-size: 13px;
        }

        .trend.up {
            color: #28a745;
        }

        .trend.down {
            color: #dc3545;
        }

        .card-icon {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 24px;
            color: #e1e8f5;
        }

        .dashboard-tabs {
            display: flex;
            border-bottom: 1px solid #eee;
            margin-bottom: 25px;
            overflow-x: auto;
        }

        .dashboard-tab {
            padding: 12px 20px;
            color: #666;
            font-weight: 500;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        .dashboard-tab.active {
            color: #2c6bed;
            border-bottom-color: #2c6bed;
        }

        .dashboard-tab:hover {
            color: #2c6bed;
        }

        .properties-container {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .property-actions {
            display: flex;
            justify-content: space-between;
            padding: 15px 20px;
            border-bottom: 1px solid #eee;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .search-property {
            display: flex;
            align-items: center;
            background: #f8f9fa;
            border-radius: 8px;
            overflow: hidden;
            padding: 0 15px;
            max-width: 300px;
            width: 100%;
            border: 1px solid #e1e1e1;
        }

        .search-property input {
            border: none;
            background: transparent;
            padding: 12px 0;
            outline: none;
            flex: 1;
        }

        .search-property i {
            color: #777;
        }

        .property-filters select {
            padding: 10px 15px;
            border: 1px solid #e1e1e1;
            border-radius: 8px;
            background-color: #f8f9fa;
            font-size: 14px;
            color: #444;
            outline: none;
            cursor: pointer;
        }

        .properties-table {
            width: 100%;
            border-collapse: collapse;
        }

        .properties-table th {
            text-align: left;
            padding: 15px 20px;
            font-weight: 600;
            color: #444;
            background-color: #f8f9fa;
            border-bottom: 1px solid #eee;
        }

        .properties-table td {
            padding: 15px 20px;
            border-bottom: 1px solid #eee;
            color: #555;
        }

        .properties-table tr:last-child td {
            border-bottom: none;
        }

        .properties-table tr:hover {
            background-color: #f8f9fa;
        }

        .property-image {
            width: 80px;
            height: 60px;
            border-radius: 6px;
            object-fit: cover;
        }

        .property-title {
            font-weight: 500;
            color: #333;
            margin-bottom: 5px;
        }

        .property-location {
            font-size: 13px;
            color: #777;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .property-price {
            font-weight: 500;
            color: #2c6bed;
        }

        .property-badge {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
            text-transform: capitalize;
        }

        .badge-sale {
            background-color: #e8f1ff;
            color: #2c6bed;
        }

        .badge-rent {
            background-color: #e5f7ed;
            color: #28a745;
        }

        .property-status {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
        }

        .status-active {
            background-color: #28a745;
        }

        .status-pending {
            background-color: #ffc107;
        }

        .status-expired {
            background-color: #dc3545;
        }

        .table-actions {
            display: flex;
            gap: 8px;
        }

        .table-actions button, .table-actions a {
            width: 32px;
            height: 32px;
            border-radius: 6px;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            color: #666;
            background-color: #f8f9fa;
            text-decoration: none;
        }

        .table-actions button:hover, .table-actions a:hover {
            background-color: #2c6bed;
            color: white;
        }

        .pagination {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            border-top: 1px solid #eee;
        }

        .page-info {
            color: #777;
            font-size: 14px;
        }

        .page-buttons {
            display: flex;
            gap: 10px;
        }

        .page-btn {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            border: 1px solid #eee;
            background-color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            color: #444;
        }

        .page-btn.active {
            background-color: #2c6bed;
            color: white;
            border-color: #2c6bed;
        }

        .page-btn:hover:not(.active) {
            background-color: #f8f9fa;
        }

        /* Add Property Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            z-index: 1000;
            overflow: auto;
        }

        .modal-content {
            position: relative;
            background-color: #fff;
            margin: 50px auto;
            padding: 30px;
            max-width: 800px;
            width: 90%;
            border-radius: 12px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
        }

        .close-modal {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 24px;
            color: #777;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .close-modal:hover {
            color: #333;
        }

        .form-section {
            margin: 15px 0;
        }

        .form-section h3 {
            font-size: 18px;
            color: #333;
            margin-bottom: 15px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 15px;
            color: #333;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #2c6bed;
            outline: none;
            box-shadow: 0 0 0 2px rgba(44, 107, 237, 0.1);
        }

        textarea.form-control {
            min-height: 100px;
            resize: vertical;
        }

        .submit-btn {
            background-color: #2c6bed;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-block;
            margin-top: 10px;
        }

        .submit-btn:hover {
            background-color: #1a5ad7;
        }

        @media (max-width: 768px) {
            .properties-table, .properties-table thead, .properties-table tbody, .properties-table th, .properties-table td, .properties-table tr {
                display: block;
            }

            .properties-table thead tr {
                position: absolute;
                top: -9999px;
                left: -9999px;
            }

            .properties-table tr {
                border-bottom: 1px solid #eee;
                padding: 15px 0;
            }

            .properties-table tr:last-child {
                border-bottom: none;
            }

            .properties-table td {
                border: none;
                border-bottom: none !important;
                position: relative;
                padding: 8px 20px !important;
                padding-left: 50% !important;
            }

            .properties-table td:before {
                position: absolute;
                top: 8px;
                left: 20px;
                width: 45%;
                padding-right: 10px;
                white-space: nowrap;
                font-weight: 600;
            }

            .properties-table td:nth-of-type(1):before { content: "Property"; }
            .properties-table td:nth-of-type(2):before { content: "Price"; }
            .properties-table td:nth-of-type(3):before { content: "Type"; }
            .properties-table td:nth-of-type(4):before { content: "Status"; }
            .properties-table td:nth-of-type(5):before { content: "Date"; }
            .properties-table td:nth-of-type(6):before { content: "Actions"; }

            .property-info {
                display: flex;
                align-items: center;
                gap: 12px;
            }

            .dashboard-stats {
                grid-template-columns: 1fr;
            }

            .dashboard-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .dashboard-title {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    
<!-- header section starts  -->
<%- include('partials/header') %>

<!-- dashboard section starts -->
<section class="dashboard">
    <div class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Seller Dashboard</h1>
            <p style="color:#666;">Manage your property listings and track performance</p>
        </div>
        <div class="dashboard-actions">
            <button class="dashboard-btn" id="addPropertyBtn">
                <i class="fas fa-plus"></i> Add New Property
            </button>
        </div>
    </div>

    <div class="dashboard-stats">
        <div class="stat-card" style="position:relative;">
            <i class="fas fa-home card-icon"></i>
            <h3>Total Properties</h3>
            <div class="value"><%= properties ? properties.length : 0 %></div>
        </div>
    </div>

    <div class="dashboard-tabs">
        <div class="dashboard-tab active">All Properties (<%= properties ? properties.length : 0 %>)</div>
        <div class="dashboard-tab">For Sale</div>
        <div class="dashboard-tab">For Rent</div>
    </div>

    <div class="properties-container">
        <div class="property-actions">
            <div class="search-property">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search properties..." id="propertySearch">
            </div>
            
            <div class="property-filters">
                <select>
                    <option value="">Sort By: Default</option>
                    <option value="price-asc">Price: Low to High</option>
                    <option value="price-desc">Price: High to Low</option>
                    <option value="date-desc">Newest First</option>
                </select>
            </div>
        </div>

        <table class="properties-table">
            <thead>
                <tr>
                    <th>Property</th>
                    <th>Price</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Date Added</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (properties && properties.length > 0) { %>
                    <% properties.forEach(property => { %>
                        <tr>
                            <td>
                                <div style="display:flex; gap:12px; align-items:center;">
                                    <img src="images/<%= property.image %>" alt="Property" class="property-image">
                                    <div>
                                        <div class="property-title"><%= property.title %></div>
                                        <div class="property-location"><i class="fas fa-map-marker-alt" style="font-size:11px;"></i> <%= property.location %></div>
                                    </div>
                                </div>
                            </td>
                            <td class="property-price">₹<%= property.price.toLocaleString() %></td>
                            <td><span class="property-badge badge-<%= property.offerType === 'rent' ? 'rent' : 'sale' %>"><%= property.offerType %></span></td>
                            <td>
                                <div class="property-status">
                                    <span class="status-dot status-active"></span> Active
                                </div>
                            </td>
                            <td><%= new Date(property.createdAt).toLocaleDateString() %></td>
                            <td>
                                <div class="table-actions">
                                    <a href="/view-property/<%= property._id %>" title="View"><i class="fas fa-eye"></i></a>
                                    <form action="/api/properties/delete/<%= property._id %>" method="POST" style="display:inline;">
                                        <button type="submit" title="Delete" onclick="return confirm('Are you sure you want to delete this property?')"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" style="text-align: center; padding: 20px;">No properties found. Add your first property by clicking "Add New Property" button.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <% if (properties && properties.length > 0) { %>
            <div class="pagination">
                <div class="page-info">
                    Showing 1 to <%= properties.length %> of <%= properties.length %> entries
                </div>
                <div class="page-buttons">
                    <button class="page-btn active">1</button>
                </div>
            </div>
        <% } %>
    </div>
</section>
<!-- dashboard section ends -->

<!-- Add Property Modal -->
<div class="modal" id="addPropertyModal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2>Add New Property</h2>
        <form action="/api/properties" method="POST">
            <div class="form-section">
                <h3>Basic Information</h3>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="title">Property Title</label>
                        <input type="text" id="title" name="title" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="type">Property Type</label>
                        <select id="type" name="type" class="form-control" required>
                            <option value="house">House</option>
                            <option value="flat">Flat</option>
                            <option value="shop">Shop</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="offerType">Offer Type</label>
                        <select id="offerType" name="offerType" class="form-control" required>
                            <option value="sale">Sale</option>
                            <option value="rent">Rent</option>
                            <option value="resale">Resale</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <div class="form-section">
                <h3>Location & Price</h3>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input type="text" id="location" name="location" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="price">Price (₹)</label>
                        <input type="text" id="price" name="price" class="form-control" inputmode="numeric" pattern="[0-9]*" required>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h3>Property Details</h3>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="bedrooms">Bedrooms</label>
                        <input type="text" id="bedrooms" name="bedrooms" class="form-control" inputmode="numeric" pattern="[0-9]*" required>
                    </div>
                    <div class="form-group">
                        <label for="bathrooms">Bathrooms</label>
                        <input type="text" id="bathrooms" name="bathrooms" class="form-control" inputmode="numeric" pattern="[0-9]*" required>
                    </div>
                    <div class="form-group">
                        <label for="area">Area (sqft)</label>
                        <input type="text" id="area" name="area" class="form-control" inputmode="numeric" pattern="[0-9]*" required>
                    </div>
                </div>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select id="status" name="status" class="form-control" required>
                            <option value="ready to move">Ready to move</option>
                            <option value="under construction">Under construction</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="furnishingStatus">Furnishing Status</label>
                        <select id="furnishingStatus" name="furnishingStatus" class="form-control" required>
                            <option value="unfurnished">Unfurnished</option>
                            <option value="semi-furnished">Semi-furnished</option>
                            <option value="furnished">Furnished</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <select id="image" name="image" class="form-control">
                            <option value="house-img-1.jpg">House Image 1</option>
                            <option value="house-img-2.jpg">House Image 2</option>
                            <option value="house-img-3.jpg">House Image 3</option>
                            <option value="house-img-4.jpg">House Image 4</option>
                            <option value="house-img-5.jpg">House Image 5</option>
                            <option value="house-img-6.webp">House Image 6</option>
                        </select>
                    </div>
                </div>
            </div>

            <div style="text-align: right;">
                <button type="submit" class="submit-btn">Add Property</button>
            </div>
        </form>
    </div>
</div>
<!-- footer section starts  -->
<%- include('partials/footer') %>

<!-- footer section ends -->

<!-- custom js file link  -->
<script src="js/script.js"></script>

<script>
    // Modal functionality
    const modal = document.getElementById("addPropertyModal");
    const addBtn = document.getElementById("addPropertyBtn");
    const closeBtn = document.querySelector(".close-modal");

    addBtn.onclick = function() {
        modal.style.display = "block";
    }

    closeBtn.onclick = function() {
        modal.style.display = "none";
    }

    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

    // Tab switching functionality
    document.querySelectorAll('.dashboard-tab').forEach(tab => {
        tab.addEventListener('click', function() {
            document.querySelectorAll('.dashboard-tab').forEach(t => {
                t.classList.remove('active');
            });
            this.classList.add('active');
            
            // Filter properties based on tab
            const propertyRows = document.querySelectorAll('.properties-table tbody tr');
            const tabText = this.textContent.toLowerCase();
            
            propertyRows.forEach(row => {
                const typeCell = row.querySelector('td:nth-child(3)');
                if (!typeCell) return;
                
                const typeText = typeCell.textContent.toLowerCase();
                
                if (tabText.includes('all') || typeText.includes(tabText.split(' ')[1].toLowerCase())) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });

    // Property search functionality
    document.getElementById('propertySearch').addEventListener('keyup', function() {
        const searchValue = this.value.toLowerCase();
        const propertyRows = document.querySelectorAll('.properties-table tbody tr');
        
        propertyRows.forEach(row => {
            const titleCell = row.querySelector('.property-title');
            const locationCell = row.querySelector('.property-location');
            
            if (titleCell && locationCell) {
                const titleText = titleCell.textContent.toLowerCase();
                const locationText = locationCell.textContent.toLowerCase();
                
                if (titleText.includes(searchValue) || locationText.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        });
    });
</script>

</body>
</html>
